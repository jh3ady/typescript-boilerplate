    "server",
    "client",
    "framework",
    "build",
    "tooling",
    "automation",
    "testing",
    "jest",
    "eslint",
    "prettier",
    "continuous integration",
    "cicd",
    "ci/cd",
    "deployment",
    "docker",
    "container",
    "microservices",
    "monorepo",
    "open source",
    "opensource",
    "configurable",
    "minimal",
    "lightweight",
    "fast",
    "modern",
    "scalable",
    "production-ready",
    "production ready",
    "production",
    "ready"
  ],
  "os": [
    "darwin",
    "linux"
  ],
  "engines": {
    "node": "^20.9.0",
    "bun": "^1.0.7"
  },
  "scripts": {
    "prebuild": "bun run build:remove",
    "build": "tsc -p tsconfig.build.json",
    "build:remove": "rimraf dist",
    "build:watch": "tsc -p tsconfig.build.json --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "pretest:coverage": "bun run test:coverage:remove",
    "test:coverage": "jest --coverage",
    "test:coverage:remove": "rimraf coverage",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint --fix --ext .ts src",
    "lint:check": "eslint --ext .ts src"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard-with-typescript": "^39.1.1",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-n": "^16.2.0",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
