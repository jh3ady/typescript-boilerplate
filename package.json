  "repository": {
    "type": "git",
    "url": "https://github.com/jh3ady/typescript-boilerplate.git"
  },
  "keywords": [
    "typescript",
    "boilerplate",
    "starter",
    "template",
    "scaffold",
    "seed",
    "project",
    "development",
    "environment",
    "configuration",
    "web",
    "frontend",
    "backend",
    "node.js",
    "node",
